<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    {% if theme == 'light' %}
        <link rel="stylesheet" href="{{ asset('css/theme-light.css') }}">
    {% else %}
        <link rel="stylesheet" href="{{ asset('css/theme-dark.css') }}">
    {% endif %}
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-md">
        <h1 class="text-xl text-center font-semibold py-4">Inscription</h1>
    </nav>
    <div class="max-w-md mx-auto mt-8 bg-white p-6 rounded-lg shadow-lg overflow-hidden">
        {{ form_errors(registrationForm) }}
        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(registrationForm.email, 'Email :', {'label_attr': {'class': 'font-bold text-gray-700'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        </div>
        <div>
            {{ form_label(registrationForm.username, 'Nom d\'utilisateur :', {'label_attr': {'class': 'font-bold text-gray-700'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        </div>
        <div>
            {{ form_label(registrationForm.firstname, 'Pr√©nom :', {'label_attr': {'class': 'font-bold text-gray-700'}}) }}
            {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        </div>
        <div>
            {{ form_label(registrationForm.lastname, 'Nom :', {'label_attr': {'class': 'font-bold text-gray-700'}}) }}
            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        </div>
        <div>
            {{ form_label(registrationForm.plainPassword, 'Mot de passe :', {'label_attr': {'class': 'font-bold text-gray-700'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm'}}) }}
        </div>
        <div>
            {{ form_label(registrationForm.agreeTerms, 'Agree Terms :', {'label_attr': {'class': 'font-bold text-gray-700'}}) }}
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox h-5 w-5 text-blue-600 mt-1'}}) }}
        </div>
        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-150 ease-in-out">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
</body>
</html>
